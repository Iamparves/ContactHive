<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_contactWrapper"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_contactCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:elevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:elevation="10dp"
                android:layout_gravity="center"
                app:cardCornerRadius="80dp">

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/avatar" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:layout_marginTop="10dp"
                android:text="Parves Hossain Rabby"
                android:textColor="@color/secondary"
                android:textAlignment="center"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:layout_marginTop="6dp"
                android:text="01234567890"
                android:textColor="#757575"
                android:textAlignment="center"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:layout_marginTop="6dp"
                android:text="example@gmail.com"
                android:textColor="#757575"
                android:textAlignment="center"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:layout_marginTop="6dp"
                android:text="Japan, Kyoto"
                android:textColor="#757575"
                android:textAlignment="center"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <Button
                    android:id="@+id/btn_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#233119"
                    android:drawableLeft="@drawable/ic_edit_contact"
                    android:layout_marginRight="10dp"
                    android:textAllCaps="false"
                    android:fontFamily="@font/open_sans_bold"
                    android:backgroundTint="#FFCC5B"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="15dp"
                    android:text="Edit" />

                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:drawableLeft="@drawable/ic_delete"
                    android:textAllCaps="false"
                    android:fontFamily="@font/open_sans_bold"
                    android:backgroundTint="#EE4241"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="15dp"
                    android:text="Delete" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginRight="12dp"
            app:srcCompat="@drawable/share_icon" />

    </androidx.cardview.widget.CardView>
</LinearLayout>